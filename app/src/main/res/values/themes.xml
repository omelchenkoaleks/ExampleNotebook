<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notebook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_800</item>
        <item name="colorPrimaryVariant">@color/brown_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

   <!--  Layout fragment_list_documents  -->

    <style name="textTitleStyle" parent="Theme.Notebook">
        <item name="android:textColor">@color/brown_900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="searchStyle" parent="Theme.Notebook">
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:editTextColor">@color/brown_900</item>
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="android:backgroundTint">@color/brown_200</item>
    </style>

    <style name="recyclerListDocumentsStyle" parent="Theme.Notebook">
        <item name="android:backgroundTint">@color/brown_50</item>
    </style>


    <!--  Layout fragment_create_document  -->

    <style name="datetimeStyle" parent="Theme.Notebook">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="documentTitleCreationStyle" parent="Theme.Notebook">
        <item name="android:textColor">@color/brown_900</item>
        <item name="android:textColorHint">@color/grey_700</item>
    </style>

    <style name="containerSubtitleColorStyle" parent="Theme.Notebook">
        <item name="android:backgroundTint">@color/red_document_50</item>
    </style>

    <style name="documentSubtitleStyle" parent="Theme.Notebook">
        <item name="android:textColorHint">@color/grey_800</item>
        <item name="android:textColor">@color/brown_900</item>
    </style>

    <style name="colorSetupStyle" parent="Theme.Notebook">
        <item name="android:backgroundTint">@color/red_document_500</item>
    </style>

    <style name="textDocumentCreationStyle" parent="Theme.Notebook">
        <item name="android:backgroundTint">@color/brown_50</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textColorHint">@color/grey_700</item>
    </style>

</resources>